{
  "compilerOptions": {
    "allowUnusedLabels": false,
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}